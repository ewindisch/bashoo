source $(dirname $0)/lib/oo

function unixbox.new {
    self=$1; shift
    instance_var $self ip $1;
};

function unixbox.ssh {
    self=$1; shift
    ssh -p3223 cloudscaling@$($self.ip) "$@";
};

function unixbox.method_missing {
    self=$1; shift
    $self.ssh "$@"
}

class unixbox
